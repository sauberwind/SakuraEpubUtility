<Window x:Class="ArchiveEpub.EpubCheckResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EpubCheckResultDialog" Height="300" Width="460">
    <DockPanel Margin="10">
        <Label DockPanel.Dock="Top">Output</Label>
        <TextBox x:Name="outputTextBox" DockPanel.Dock="Top" TextWrapping="Wrap" Margin="10,0,0,0"/>
        <Label DockPanel.Dock="Top">Error</Label>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Center" Click="OnOKClick" FontSize="16" Width="50" Margin="10">OK</Button>
        <ScrollViewer>
            <TextBox x:Name="errorTextBox" TextWrapping="Wrap" Margin="10,0,0,0"/>
        </ScrollViewer>

    </DockPanel>
</Window>
